const express = require('express');
const router = express.Router();
const {
  addOne,  
  getAll,  
  getById,  
  updateOne,  
  deleteOne,  
} = require('../controller/{{camelCase name}}Controller');
const { isAuthCustomer } = require('../config/auth');

//add a staff
router.post('/add', isAuthCustomer, addOne);

//get all 
router.get('/', isAuthCustomer, getAll);

//get a
router.get('/:id', isAuthCustomer, getById);

//update 
router.post('/:id', isAuthCustomer, updateOne);

//delete a staff
router.delete('/:id', isAuthCustomer, deleteOne);

module.exports = router;
